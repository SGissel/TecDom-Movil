<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".perfil">

    <ImageView
        android:id="@+id/imgperfil"
        android:layout_width="175dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/txtnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/trochut"
        android:text="Carlos Sanchez HernÃ¡ndez"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/trochut"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sairacondensed"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Hac dui morbi diam, vitae magna pellentesque risus, dolor. Id in auctor metus, ut tincidunt ligula consequat, massa. "
        android:textAlignment="center"
        android:textSize="17dp" />

</LinearLayout>