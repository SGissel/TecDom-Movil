<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/content_basic" />
        <TableRow>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/trochut"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Otros servicios"
                android:textColor="#222"
                android:textSize="34sp"
                android:textStyle="bold" />

        </TableRow>
        <TableRow>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="45dp"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:paddingRight="40dp"
                android:paddingBottom="50dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/servicios" />


            </RelativeLayout>
        </TableRow>

        <TableRow >

            <LinearLayout
                android:layout_width="219dp"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="137dp"
                    android:layout_height="match_parent"
                    card_view:srcCompat="@drawable/gmail" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="136dp"
                    android:layout_height="match_parent"
                    card_view:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    card_view:srcCompat="@drawable/whatsapp" />
            </LinearLayout>

        </TableRow>

    </TableLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>